{
  "name": "apobank-hackathon-backend",
  "version": "0.0.1",
  "author": "codingbr0s",
  "homepage": "github.com/codingb0s/backend",
  "scripts": {
    "build": "npm run tslint && npm run build-ts",
    "build-ts": "tsc",
    "prestart": "npm run build",
    "serve": "npm run build && node ./dist/server.js",
    "start": "npm run serve",
    "predebug": "npm run build",
    "debug": "npm run build && npm run watch-debug",
    "test": "jest --forceExit --runInBand --coverage --verbose",
    "watch": "npm run build && concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"cyan.bold,green.bold\" \"npm run watch-ts\" \"npm run serve\"",
    "watch-ts": "tsc -w",
    "watch-node": "nodemon dist/server.js",
    "watch-jest": "jest --watchAll --runInBand",
    "tslint": "tslint -c tslint.json -p tsconfig.json",
    "serve-debug": "nodemon --inspect dist/server.js",
    "watch-debug": "npm run build && concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"cyan.bold,green.bold\" \"npm run watch-ts\" \"npm run serve-debug\""
  },
  "directories": {
    "test": "test"
  },
  "dependencies": {
    "typescript": "^3.4.3",
    "cookie-parser": "~1.4.4",
    "debug": "~2.6.9",
    "express": "~4.16.1",
    "http-errors": "~1.6.3",
    "winston": "^3.2.1",
    "pug": "2.0.0-beta11",
    "dotenv": "^7.0.0",
    "request": "^2.88.0",
    "request-promise": "^4.2.4",
    "errorhandler": "^1.5.0",
    "express-session": "^1.16.1",
    "express-validator": "^5.3.1",
    "memorystore": "^1.6.1",
    "compression": "^1.7.4",
    "lodash": "^4.17.11",
    "node-sass-middleware": "latest"
  },
  "devDependencies": {
    "@types/body-parser": "^1.17.0",
    "@types/compression": "^0.0.36",
    "@types/debug": "^4.1.4",
    "@types/dotenv": "^6.1.1",
    "@types/errorhandler": "^0.0.32",
    "@types/express": "^4.16.1",
    "@types/express-session": "^1.15.12",
    "@types/express-validator": "^3.0.0",
    "@types/lodash": "^4.14.123",
    "@types/node": "^11.13.4",
    "@types/request": "^2.48.1",
    "@types/request-promise": "^4.1.42",
    "@types/shelljs": "^0.8.4",
    "@types/node-sass-middleware": "^0.0.31",
    "@types/http-errors": "^1.6.1",
    "@types/jest": "^24.0.13",
    "node-sass": "^4.11.0",
    "nodemon": "^1.18.11",
    "shelljs": "^0.8.3",
    "ts-node": "^8.0.3",
    "tslint": "^5.15.0",
    "concurrently": "^4.1.0",
    "jest": "^24.8.0",
    "ts-jest": "^24.0.2"
  }
}
